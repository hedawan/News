<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false" android:state_checked="true">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <size android:height="@dimen/ksw_md_thumb_ripple_size" android:width="@dimen/ksw_md_thumb_ripple_size" />
                    <solid android:color="@android:color/transparent" />
                </shape>
            </item>
            <item android:gravity="center" android:left="@dimen/ksw_md_thumb_shadow_inset" android:top="@dimen/ksw_md_thumb_shadow_inset_top" android:right="@dimen/ksw_md_thumb_shadow_inset" android:bottom="@dimen/ksw_md_thumb_shadow_inset_bottom">
                <shape android:shape="oval">
                    <solid android:color="@color/ksw_md_solid_shadow" />
                </shape>
            </item>
            <item android:gravity="center" android:left="@dimen/ksw_md_thumb_solid_inset" android:top="@dimen/ksw_md_thumb_solid_inset" android:right="@dimen/ksw_md_thumb_solid_inset" android:bottom="@dimen/ksw_md_thumb_solid_inset">
                <shape android:shape="oval">
                    <solid android:color="@color/ksw_md_solid_checked_disable" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_enabled="false">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <size android:height="@dimen/ksw_md_thumb_ripple_size" android:width="@dimen/ksw_md_thumb_ripple_size" />
                    <solid android:color="@android:color/transparent" />
                </shape>
            </item>
            <item android:gravity="center" android:left="@dimen/ksw_md_thumb_shadow_inset" android:top="@dimen/ksw_md_thumb_shadow_inset_top" android:right="@dimen/ksw_md_thumb_shadow_inset" android:bottom="@dimen/ksw_md_thumb_shadow_inset_bottom">
                <shape android:shape="oval">
                    <solid android:color="@color/ksw_md_solid_shadow" />
                </shape>
            </item>
            <item android:gravity="center" android:left="@dimen/ksw_md_thumb_solid_inset" android:top="@dimen/ksw_md_thumb_solid_inset" android:right="@dimen/ksw_md_thumb_solid_inset" android:bottom="@dimen/ksw_md_thumb_solid_inset">
                <shape android:shape="oval">
                    <solid android:color="@color/ksw_md_solid_disable" />
                </shape>
            </item>
        </layer-list>
    </item>
    //按钮开启后的按压状态
    <item android:state_checked="true" android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <size android:height="@dimen/ksw_md_thumb_ripple_size" android:width="@dimen/ksw_md_thumb_ripple_size" />
                    <solid android:color="@color/onColor" />//大圆颜色
                </shape>
            </item>
            <item android:gravity="center" android:left="@dimen/ksw_md_thumb_shadow_inset" android:top="@dimen/ksw_md_thumb_shadow_inset_top" android:right="@dimen/ksw_md_thumb_shadow_inset" android:bottom="@dimen/ksw_md_thumb_shadow_inset_bottom">
                <shape android:shape="oval">
                    <solid android:color="@color/ksw_md_solid_shadow" />//小圆阴影
                </shape>
            </item>
            <item android:gravity="center" android:left="@dimen/ksw_md_thumb_solid_inset" android:top="@dimen/ksw_md_thumb_solid_inset" android:right="@dimen/ksw_md_thumb_solid_inset" android:bottom="@dimen/ksw_md_thumb_solid_inset">
                <shape android:shape="oval">
                    <solid android:color="@color/colorPrimary" />小圆颜色
                </shape>
            </item>
        </layer-list>
    </item>
    //按钮关闭后的按压状态
    <item android:state_checked="false" android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <size android:height="@dimen/ksw_md_thumb_ripple_size" android:width="@dimen/ksw_md_thumb_ripple_size" />
                    <solid android:color="@color/ksw_md_ripple_normal" />// 按下大圆颜色
                </shape>
            </item>
            <item android:gravity="center" android:left="@dimen/ksw_md_thumb_shadow_inset" android:top="@dimen/ksw_md_thumb_shadow_inset_top" android:right="@dimen/ksw_md_thumb_shadow_inset" android:bottom="@dimen/ksw_md_thumb_shadow_inset_bottom">
                <shape android:shape="oval">
                    <solid android:color="@color/ksw_md_solid_shadow" />// 按下小圆阴影
                </shape>
            </item>
            <item android:gravity="center" android:left="@dimen/ksw_md_thumb_solid_inset" android:top="@dimen/ksw_md_thumb_solid_inset" android:right="@dimen/ksw_md_thumb_solid_inset" android:bottom="@dimen/ksw_md_thumb_solid_inset">
                <shape android:shape="oval">
                    <solid android:color="@color/ksw_md_solid_normal" />// 按下小圆颜色
                </shape>
            </item>
        </layer-list>
    </item>
    //按钮开启后的正常状态
    <item android:state_checked="true" android:state_pressed="false">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <size android:height="@dimen/ksw_md_thumb_ripple_size" android:width="@dimen/ksw_md_thumb_ripple_size" />
                    <solid android:color="@android:color/transparent" />// 大圆颜色
                </shape>
            </item>
            <item android:gravity="center" android:left="@dimen/ksw_md_thumb_shadow_inset" android:top="@dimen/ksw_md_thumb_shadow_inset_top" android:right="@dimen/ksw_md_thumb_shadow_inset" android:bottom="@dimen/ksw_md_thumb_shadow_inset_bottom">
                <shape android:shape="oval">
                    <solid android:color="@color/ksw_md_solid_shadow" />// 小圆阴影
                </shape>
            </item>
            <item android:gravity="center" android:left="@dimen/ksw_md_thumb_solid_inset" android:top="@dimen/ksw_md_thumb_solid_inset" android:right="@dimen/ksw_md_thumb_solid_inset" android:bottom="@dimen/ksw_md_thumb_solid_inset">
                <shape android:shape="oval">
                    <solid android:color="@color/colorPrimary" />// 小圆颜色
                </shape>
            </item>
        </layer-list>
    </item>
    //按钮关闭后的正常状态
    <item>
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <size android:height="@dimen/ksw_md_thumb_ripple_size" android:width="@dimen/ksw_md_thumb_ripple_size" />
                    <solid android:color="@android:color/transparent" />// 大圆颜色
                </shape>
            </item>
            <item android:gravity="center" android:left="@dimen/ksw_md_thumb_shadow_inset" android:top="@dimen/ksw_md_thumb_shadow_inset_top" android:right="@dimen/ksw_md_thumb_shadow_inset" android:bottom="@dimen/ksw_md_thumb_shadow_inset_bottom">
                <shape android:shape="oval">
                    <solid android:color="@color/ksw_md_solid_shadow" />// 小圆阴影
                </shape>
            </item>
            <item android:gravity="center" android:left="@dimen/ksw_md_thumb_solid_inset" android:top="@dimen/ksw_md_thumb_solid_inset" android:right="@dimen/ksw_md_thumb_solid_inset" android:bottom="@dimen/ksw_md_thumb_solid_inset">
                <shape android:shape="oval">
                    <solid android:color="@color/ksw_md_solid_normal" />// 小圆颜色
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
